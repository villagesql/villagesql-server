ALTER TABLE mysql.ndb_replication ADD COLUMN binlog_row_slice_count INT UNSIGNED AFTER binlog_type;
ALTER TABLE mysql.ndb_replication ADD COLUMN binlog_row_slice_id INT UNSIGNED AFTER binlog_type;
