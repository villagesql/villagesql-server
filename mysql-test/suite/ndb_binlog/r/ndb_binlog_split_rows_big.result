SELECT IF(COUNT(*)-@data_volume BETWEEN -@ceil AND +@ceil, 'YES', CONCAT('NO - ',COUNT(*))) AS BALANCED FROM t2;
BALANCED
YES
include/rpl/mysqlbinlog.inc
# Should be close to 2*(3072/3)
SET @data_volume = FLOOR(2*(3072/3));
SET @ceil = 3*SQRT(3072*2/3*1/3) # 3 sigma confidence interval;
SELECT IF(COUNT(*)-@data_volume BETWEEN -@ceil AND +@ceil, 'YES', CONCAT('NO - ',COUNT(*))) AS BALANCED FROM t2;
BALANCED
YES
include/rpl/mysqlbinlog.inc
# Must have imported the total
