--echo # #######################################################################
--echo # Sixth scenario:
--echo #
--echo # This tests uses the same configuration as before, but the created table
--echo # contains a FK/UK relationship. The table is created but there are warnings
--echo # that the applying of splitted rows will invalidate the constraints
--echo # enforced on the relation.
--echo

--let $warning= logging row slice for table with Foreign Key or Unique Key
--let $qry= SELECT count(DATA) AS warnings FROM performance_schema.error_log WHERE SUBSYSTEM = "NDB" AND DATA REGEXP "$warning"

--echo # Using mysqld.2 it must log the warning
--connection mysqld2
CREATE TABLE t6_p (k INT PRIMARY KEY, v VARCHAR(8)) ENGINE = NDB;
CREATE TABLE t6_c (j INT PRIMARY KEY,
                   p_id INT NOT NULL,
                   CONSTRAINT p_id_fk FOREIGN KEY(p_id) REFERENCES t6_p(k)) ENGINE = NDB;
--let $assert_text= Warns that table with Foreign Key will log row slice
--let $assert_cond= [$qry, warnings, 1] = 1
--source include/assert.inc

--echo # Using mysqld.1, a warning is logged only on binlog servers configured for row-slices (e.g. mysqld.2)
--echo # [connection mysqld.1]
--connection mysqld1
CREATE TABLE t6_p1 (k INT PRIMARY KEY, v VARCHAR(8)) ENGINE = NDB;
CREATE TABLE t6_c1 (j INT PRIMARY KEY,
                    p_id INT NOT NULL,
                    CONSTRAINT p1_id_fk FOREIGN KEY(p_id) REFERENCES t6_p1(k)) ENGINE = NDB;
--let $assert_text= Does NOT warn that table with Foreign Key will log row slice
--let $assert_cond= [$qry, warnings, 1] = 0
--source include/assert.inc

--echo # [connection mysqld.2]
--connection mysqld2
--let $assert_text= Warns that table with Foreign Key will log row slice
--let $assert_cond= [$qry, warnings, 1] = 2
--source include/assert.inc

--echo # Restarting binlog on mysqld.2 must log warning for parent tables as well
--let $restart_parameters= restart:--ndb-log-row-slice-count=3 --ndb-log-row-slice-id=0
--let $mysqld_name= mysqld.2.1
--source include/restart_mysqld.inc

--let $assert_text= Warns that parent and child tables with Foreign Key relation will log row slice
--let $assert_cond= [$qry, warnings, 1] = 4
--source include/assert.inc


--echo # #######################################################################
--echo # Seventh scenario:
--echo #
--echo # This tests uses a table with a Unique Key, so the table is created but
--echo # there are warnings that the applying of splitted rows will invalidate
--echo # the constraints.
--echo

--echo # Using mysqld.2 it must log the warning
--connection mysqld2
CREATE TABLE t7 (k INT PRIMARY KEY, j INT NOT NULL, UNIQUE KEY(j)) ENGINE = NDB;
--let $assert_text= Warns that table with Unique Key will log row slice
--let $assert_cond= [$qry, warnings, 1] = 5
--source include/assert.inc

--echo # Using mysqld.1, a warning is logged only on binlog servers configured for row-slices (e.g. mysqld.2)
--echo # [connection mysqld.1]
--connection mysqld1
CREATE TABLE t7_1 (k INT PRIMARY KEY, j INT NOT NULL, UNIQUE KEY(j)) ENGINE = NDB;
--let $assert_text= Does NOT warn that table with Unique Key will log row slice
--let $assert_cond= [$qry, warnings, 1] = 0
--source include/assert.inc

--echo # [connection mysqld.2]
--connection mysqld2
--let $assert_text= Warns that table with Unique Key will log row slice
--let $assert_cond= [$qry, warnings, 1] = 6
--source include/assert.inc


