SET @@GLOBAL.DEBUG= '+d,PKE_assert_single_primary_key_generated_update_fk_sql';
UPDATE t1 SET f1=50 WHERE f1=20;
SET @@GLOBAL.DEBUG= '-d,PKE_assert_single_primary_key_generated_update_fk_sql';

SELECT * FROM t1 ORDER BY f1;
