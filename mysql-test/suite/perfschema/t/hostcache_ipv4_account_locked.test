
#
# Tests for the performance_schema host_cache.
#
# Test authorization with auth plugins.
# error reporting in:
# - column COUNT_ACCOUNT_LOCKED_ERRORS

--source include/have_debug.inc

# Enforce a clean state
--source ../include/wait_for_pfs_thread_count.inc
--source ../include/hostcache_set_state.inc

CREATE USER 'user_locked'@'santa.claus.ipv4.example.com'
  IDENTIFIED BY 'user_locked_password';

--connection default
set global debug= "+d,vio_peer_addr_fake_ipv4,getnameinfo_fake_ipv4,getaddrinfo_fake_good_ipv4";

connect (con1,"127.0.0.1",user_locked,user_locked_password,test,$MASTER_MYPORT,);
select "Con1 is alive";
select current_user();
disconnect con1;

--connection default
--source ../include/hostcache_dump.inc

ALTER USER 'user_locked'@'santa.claus.ipv4.example.com' ACCOUNT LOCK;

--disable_query_log
--error ER_ACCOUNT_HAS_BEEN_LOCKED
connect (con2,"127.0.0.1",user_locked,user_locked_password,test,$MASTER_MYPORT,);
--enable_query_log

--connection default
--source ../include/hostcache_dump.inc

--disable_query_log
--error ER_ACCOUNT_HAS_BEEN_LOCKED
connect (con2,"127.0.0.1",user_locked,user_locked_password,test,$MASTER_MYPORT,);
--enable_query_log

--connection default
--source ../include/hostcache_dump.inc

ALTER USER 'user_locked'@'santa.claus.ipv4.example.com' ACCOUNT UNLOCK;

--disable_query_log
connect (con3,"127.0.0.1",user_locked,user_locked_password,test,$MASTER_MYPORT,);
select "Con3 is alive";
select current_user();
disconnect con3;
--enable_query_log

--connection default
--source ../include/hostcache_dump.inc

DROP USER 'user_locked'@'santa.claus.ipv4.example.com';

set global debug= default;

