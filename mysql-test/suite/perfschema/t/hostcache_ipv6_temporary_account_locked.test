
#
# Tests for the performance_schema host_cache.
#
# Test authorization with auth plugins.
# error reporting in:
# - column COUNT_TEMPORARY_ACCOUNT_LOCKED_ERRORS

--source include/have_debug.inc
--source include/have_ipv6.inc

# Enforce a clean state
--source ../include/wait_for_pfs_thread_count.inc
--source ../include/hostcache_set_state.inc

CREATE USER 'temporary_user_locked'@'santa.claus.ipv6.example.com'
  IDENTIFIED BY 'temporary_user_locked_password'
  FAILED_LOGIN_ATTEMPTS 3 PASSWORD_LOCK_TIME 4;

--connection default
set global debug= "+d,vio_peer_addr_fake_ipv6,getnameinfo_fake_ipv6,getaddrinfo_fake_good_ipv6";

connect (con1,"::1",temporary_user_locked,temporary_user_locked_password,test,$MASTER_MYPORT,);
select "Con1 is alive";
select current_user();
disconnect con1;

--connection default
--source ../include/hostcache_dump.inc
--source ../include/temporary_account_locks_dump.inc

--disable_query_log
--error ER_ACCESS_DENIED_ERROR
connect (con2,"::1",temporary_user_locked,wrong_password,test,$MASTER_MYPORT,);
--enable_query_log

--connection default
--source ../include/hostcache_dump.inc
--source ../include/temporary_account_locks_dump.inc

--disable_query_log
--error ER_ACCESS_DENIED_ERROR
connect (con2,"::1",temporary_user_locked,wrong_password,test,$MASTER_MYPORT,);
--enable_query_log

--connection default
--source ../include/hostcache_dump.inc
--source ../include/temporary_account_locks_dump.inc

--disable_query_log
--error ER_USER_ACCESS_DENIED_FOR_USER_ACCOUNT_BLOCKED_BY_PASSWORD_LOCK
connect (con2,"::1",temporary_user_locked,wrong_password,test,$MASTER_MYPORT,);
--enable_query_log

--connection default
--source ../include/hostcache_dump.inc
--source ../include/temporary_account_locks_dump.inc

--disable_query_log
--error ER_USER_ACCESS_DENIED_FOR_USER_ACCOUNT_BLOCKED_BY_PASSWORD_LOCK
connect (con2,"::1",temporary_user_locked,wrong_password,test,$MASTER_MYPORT,);
--enable_query_log

--connection default
--source ../include/hostcache_dump.inc
--source ../include/temporary_account_locks_dump.inc

DROP USER 'temporary_user_locked'@'santa.claus.ipv6.example.com';

set global debug= default;

